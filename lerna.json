{
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "ignoreChanges": ["**/*.md", "**/*.spec.*", "**/*.test.*"],
      "message": "chore(release): publish",
      "yes": true
    },
    "version": {
      "allowBranch": "master"
    }
  },
  "packages": ["packages/*"],
  "hoist": true
}
